@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<body>

    <!-- Carousel -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="https://github.com/kocaemre/WebProgProjectImages/blob/main/img/banner/1.jpg?raw=true"
                     class="d-block w-100" alt="Slide 1">
            </div>
            <div class="carousel-item active">
                <img src="https://github.com/kocaemre/WebProgProjectImages/blob/main/img/banner/2.jpg?raw=true"
                     class="d-block w-100" alt="Slide 2">
            </div>
            <div class="carousel-item">
                <img src="https://github.com/kocaemre/WebProgProjectImages/blob/main/img/banner/3.jpg?raw=true"
                     class="d-block w-100" alt="Slide 3">
            </div>
            <div class="carousel-item">
                <img src="https://github.com/kocaemre/WebProgProjectImages/blob/main/img/banner/4.jpg?raw=true"
                     class="d-block w-100" alt="Slide 4">
            </div>
            <div class="carousel-item">
                <img src="https://github.com/kocaemre/WebProgProjectImages/blob/main/img/banner/5.jpg?raw=true"
                     class="d-block w-100" alt="Slide 5">
            </div>
            <div class="carousel-item">
                <img src="https://github.com/kocaemre/WebProgProjectImages/blob/main/img/banner/6.jpg?raw=true"
                     class="d-block w-100" alt="Slide 6">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Reservation Form -->
    <div class="container p-5">
        <div class="container mt-3">
            <div class="container p-5 pt-0 pb-0">
                <div class="d-flex flex-column bg-light rounded-5 p-4 shadow-lg">
                    <h2 class="text-center mb-2">Flight Reservation</h2>

                    <!-- Flight Class Selection -->
                    <div class="d-flex justify-content-start mb-3">
                        <div class="">
                            <input class="form-check-input" type="radio" name="flightClass" id="Economy" checked>
                            <label class="form-check-label" for="Economy">Economy</label>
                            <input class="form-check-input" type="radio" name="flightClass" id="Business">
                            <label class="form-check-label" for="Business">Business</label>
                        </div>
                    </div>

                    <!-- Form Fields -->
                    <div class="d-flex align-items-end">
                        <div class="form-floating mx-2 flex-fill">
                            <select class="form-select" id="departure" aria-label="Departure">
                                <option selected disabled>Where</option>
                                @foreach (var location in ViewBag.Locations)
                                {
                                    <option value="@location">@location</option>
                                }
                            </select>
                            <label for="departure">From</label>
                        </div>

                        <div class="form-floating mx-2 flex-fill">
                            <select class="form-select" id="destination" aria-label="Destination">
                                <option selected disabled>To</option>
                                @foreach (var location in ViewBag.Locations)
                                {
                                    <option value="@location">@location</option>
                                }
                            </select>
                            <label for="destination">To</label>
                        </div>

                        <div class="form-floating mx-2 flex-fill">
                            <input type="date" class="form-control" id="date" aria-label="Date">
                            <label for="date">Departure Date</label>
                        </div>

                        <div class="form-floating mx-2 flex-fill">
                            <select class="form-select" id="passengers" aria-label="Passengers">
                                <option selected disabled>Person</option>
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <label for="passenger">Person</label>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="mt-4 text-center">
                        <button class="btn btn-primary btn-lg">Buy</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
